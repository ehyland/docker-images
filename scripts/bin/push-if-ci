#!/usr/bin/env bash

set -euo pipefail

IMAGE="$1"

if [[ "$CI" == "true" ]]; then
  echo "publishing $IMAGE"
  
  docker push "$IMAGE"
else
  echo "Skipping push as not in CI"
fi

echo "ðŸš€  $IMAGE"

if [[ -e $(which print-docker-build-success-message) ]]; then
  print-docker-build-success-message "$IMAGE"
fi
